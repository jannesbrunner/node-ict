extends ../layouts/client-layout.pug

block styles
    link(rel="stylesheet", href="/css/client.css")
block content
    h1 Hallo, bitte vorstellen!
    form(method='POST' action='/client/new')
        div.form-group
            label(for='name') Name
            input.form-control(type='text' id='name' placeholder='Dein Name' name='name')
        button.btn.btn-primary(type='submit') Mitmachen!
