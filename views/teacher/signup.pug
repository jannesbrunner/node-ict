extends ../layouts/teacher-layout.pug

block styles
  link(rel="stylesheet", href="/css/teacher.css")
block content
  div.card
    unless isLoggedIn
      div.card-header Bitte registrieren!
    if isLoggedIn
      div.card-header Neuen Nutzer anlegen!  
    div.card-body
      form(method='POST' action='/teacher/signup')
        div.form-group
          label(for='name') Name
          input.form-control(type='text' id='name' placeholder='Ihr Name' name='name' required)
        div.form-group
          label(for='mail') E-Mail
          input.form-control(type='text' id='mail' placeholder='jemand@example.tld' name='mail' required)
        div.form-group
          label(for='password') Passwort
          input.form-control(type='password' id='password' placeholder='Passwort' name='password' required)
        div.form-group
          label(for='passwordConfirm') Passwort best√§tigen
          input.form-control(type='password' id='passwordConfirm' placeholder='Passwort' name='passwordConfirm' required)
        unless isLoggedIn
          button.btn.btn-primary(type='submit') Registrieren 
        if isLoggedIn
          button.btn.btn-primary(type='submit') Speichern 
